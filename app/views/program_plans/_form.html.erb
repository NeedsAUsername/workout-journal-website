<%= form_for program_plan do |f| %>
  <div class="field">
    <%= f.label :name %>
    <br/>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <br/>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <br>
    <h2>Exercises</h2>
    <%= f.collection_check_boxes(exercise_method, standard_exercises_list, :id, :name) %>
  </div>
  <br>
  <h2><%= nested_field_text %></h2>
  <div id='exercises'>
    <%= f.fields_for :exercises, nested_exercises_list do |exercise| %>
      <%= render partial: 'exercise_fields', locals: {f: exercise} %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add exercise', f, :exercises %>
    </div>
  </div>
  <br>
  <%= f.submit save_text %>
<% end %>
