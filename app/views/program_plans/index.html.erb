
<% if @user.program_plan.nil? %>
  <br><h2 class="sidebar"><%= link_to 'Want to start a custom program?', new_program_plan_path %></h2>
<% else %>
  <h1>Your Custom Program</h1>
  <h3 class="content"><%= link_to @user.program_plan.name, program_plan_path(@user.program_plan) %></h3>
  <h4 class="content"><%= @user.program_plan.description %></h4>
<% end %>

<br><br>
<h1 class="content">Featured Programs</h1>
<% @program_plans.each do |plan| %>
  <% if plan.featured %>
    <h3 class="content"><%= link_to plan.name, program_plan_path(plan) %></h3>
    <h4 class="content"><%= plan.description %></h4>
  <% end %>
<% end %>
